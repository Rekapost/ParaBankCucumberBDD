<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Suite and Cucumber Parallel Suite" parallel="tests" thread-count="3">

<listeners>
    <listener class-name="utilities.chainTestListener"></listener>
</listeners>


  <test name="Firefox TestNgRunner Testng">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="testRunner.TestNgRunner"/>
    </classes>
  </test> <!-- Test -->

 <test name="Edge TestNgRunner Testng">
  <parameter name="browser" value="edge"></parameter>
    <classes>
      <class name="testRunner.TestNgRunner"/>
    </classes>
  </test>    




</suite> <!-- Suite -->
